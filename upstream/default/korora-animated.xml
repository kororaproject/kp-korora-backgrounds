<background>
  <starttime>
    <year>2013</year>
    <month>03</month>
    <day>02</day>
    <hour>07</hour>
    <minute>00</minute>
    <second>00</second>
  </starttime>
<!-- This animation will start at 7 AM. -->

<!-- We start with dawn at 7 AM. It will remain up for 2 hours. -->
<static>
<duration>7200.0</duration>
<file>
	<!-- Wide 16:9 -->
	<size width="1920" height="1080">/usr/share/backgrounds/korora/default-animated/tv-wide/korora-00-dawn.png</size>
	<!-- Wide 16:10 -->
	<size width="1920" height="1200">/usr/share/backgrounds/korora/default-animated/wide/korora-00-dawn.png</size>
	<!-- Standard 4:3 -->
	<size width="2048" height="1536">/usr/share/backgrounds/korora/default-animated/standard/korora-00-dawn.png</size>
	<!-- Normalish 5:4 -->
	<size width="1280" height="1024">/usr/share/backgrounds/korora/default-animated/normalish/korora-00-dawn.png</size>
</file>
</static>

<!-- Dawn ended and starts to transition to day at 9 AM. The transition lasts for 2 hours, ending at 11 AM. -->
<transition type="overlay">
<duration>7200.0</duration>
<from>
	<size width="1920" height="1080">/usr/share/backgrounds/korora/default-animated/tv-wide/korora-00-dawn.png</size>
	<size width="1920" height="1200">/usr/share/backgrounds/korora/default-animated/wide/korora-00-dawn.png</size>
	<size width="2048" height="1536">/usr/share/backgrounds/korora/default-animated/standard/korora-00-dawn.png</size>
	<size width="1280" height="1024">/usr/share/backgrounds/korora/default-animated/normalish/korora-00-dawn.png</size>
</from>
<to>
	<size width="1920" height="1080">/usr/share/backgrounds/korora/default-animated/tv-wide/korora-01-day.png</size>
	<size width="1920" height="1200">/usr/share/backgrounds/korora/default-animated/wide/korora-01-day.png</size>
	<size width="2048" height="1536">/usr/share/backgrounds/korora/default-animated/standard/korora-01-day.png</size>
	<size width="1280" height="1024">/usr/share/backgrounds/korora/default-animated/normalish/korora-01-day.png</size>
</to>
</transition>

<!-- It's 11 AM, we're showing the day image in full force now, for 4 hours ending at 3 PM. -->
<static>
<duration>14400.0</duration>
<file>
	<size width="1920" height="1080">/usr/share/backgrounds/korora/default-animated/tv-wide/korora-01-day.png</size>
	<size width="1920" height="1200">/usr/share/backgrounds/korora/default-animated/wide/korora-01-day.png</size>
	<size width="2048" height="1536">/usr/share/backgrounds/korora/default-animated/standard/korora-01-day.png</size>
	<size width="1280" height="1024">/usr/share/backgrounds/korora/default-animated/normalish/korora-01-day.png</size>
</file>
</static>

<!-- It's 3 PM, and we're starting to transition to dusk. Transition completes at 7 PM. -->
<transition type="overlay">
<duration>14400.0</duration>
<from>
	<size width="1920" height="1080">/usr/share/backgrounds/korora/default-animated/tv-wide/korora-01-day.png</size>
	<size width="1920" height="1200">/usr/share/backgrounds/korora/default-animated/wide/korora-01-day.png</size>
