<!-- It's 11 PM, we're showing the night till 5 AM. -->
<static>
<duration>21600.0</duration>
<file>
	<size width="1920" height="1080">/usr/share/backgrounds/korora/default-animated/tv-wide/korora-03-night.png</size>
	<size width="1920" height="1200">/usr/share/backgrounds/korora/default-animated/wide/korora-03-night.png</size>
	<size width="2048" height="1536">/usr/share/backgrounds/korora/default-animated/standard/korora-03-night.png</size>
